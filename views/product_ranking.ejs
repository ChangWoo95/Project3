                           <td class="column-3"><%=oneUser.name%></td>
                           <td><li><a href="/mall/product_detail/<%=oneUser.I_id%>">보러가기</a></li></td>
                        </tr>
                        <%
                              }
                           }
                        %>
                       </table>
                     </div>
                  </div>
               </div>
            </div>

