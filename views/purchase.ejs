	<script>
		function numberWithCommas(x) {
    		document.write( x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") +"원" );
		}

		function frmcheckout(){
			if(confirm("정말 취소하시겠습니까?")) {
				$("#frm").attr("method", "post");
				$("#frm").attr("action", "/mall/purchase");
				document.frm.submit();
			}
			else return false;
		}  

		function frmsubmit(){
			$("#frm").attr("method", "get");
        	$("#frm").attr("action", "/mall/review");
        	document.frm.submit();
		}      
    </script>

