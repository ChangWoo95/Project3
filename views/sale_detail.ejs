	<script>
		function numberWithCommas(x) {
			document.write( x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") +"원" );
		};
		
		function num_change(){
			var x = Number($("#num_product").val());
			if( (x + 1) == 100) {
				$("#div_plus").css('pointer-events','none');
				$("#num-product").val(x+1);
			}
			else{
				$("#div_plus").css('pointer-events','auto');
			}
			if( (x+1) > 1){
				$("#div_minus").css('pointer-events','auto');
			}
			else $("#div_minus").css('pointer-events','none');
		}	
	</script>
